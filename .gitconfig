[user]
	email = norbertchmiel.it@gmail.com
	name = Norbiox
[core]
	editor = vim
	pager = less
	excludesFile = /home/norbert/.gitignore
[url "git@github.com:"]
	insteadOf = https://github.com/
[diff]
	tool = vimdiff
[difftool]
	prompt = false

[push]
	autoSetupRemote = true
	followTags = true
	default = upstream
[alias]
	root = rev-parse --show-toplevel
[merge]
	tool = vimdiff
[rerere]
	enabled = true
